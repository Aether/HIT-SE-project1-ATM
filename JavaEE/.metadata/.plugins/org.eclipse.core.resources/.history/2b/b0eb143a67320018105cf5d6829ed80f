<%
String input = request.getParameter("input");
if(input.equals("login")) {
	String userid = request.getParameter("userid");
	Cookie c = new Cookie("userid",userid);
	c.setMaxAge(60*60*24);
	response.addCookie(c);
	response.sendRedirect("store.jsp");
}
else if(input.equals("fruit")) {
	String apple = request.getParameter("apple");
	String orange = request.getParameter("orange");
	if(apple == null) apple = "0";
	if(orange == null) orange = "0";
	Cookie c1 = new Cookie("apple",apple);
	c1.setMaxAge(60*60*24);
	response.addCookie(c1);
	Cookie c2 = new Cookie("orange",orange);
	c2.setMaxAge(60*60*24);
	response.addCookie(c2);
	response.sendRedirect("milk.jsp");
}
%>
</body>
</html>
